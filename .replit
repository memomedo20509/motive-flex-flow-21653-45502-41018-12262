modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "resend:1.0.0", "javascript_gemini_ai_integrations:2.0.0"]

[nix]
channel = "stable-25_05"
packages = ["imagemagick"]

[deployment]
deploymentTarget = "autoscale"
run = ["node", "dist/index.js"]
build = ["bash", "-c", "npm run build:client && vite build --config vite.config.ssr.ts && npm run build:server"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.production]
SITE_URL = "https://mutflex.com"
